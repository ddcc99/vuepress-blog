* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body, #app {
    width: 100%;
    height: 100%;
}

p {
    line-height: 1.8;
    margin: 1rem 0;
}

::-webkit-scrollbar {
    width: .5rem;
    height: .5rem;
}

::-webkit-scrollbar-thumb {
    background-color: #bebebe;
    border-radius: .5rem;
}

::-webkit-scrollbar-track {
    background-color: hsla(0,0%,50.2%,.25);
    border-radius: .5rem;
}

a {
    text-decoration: unset;
    color: unset;
}
